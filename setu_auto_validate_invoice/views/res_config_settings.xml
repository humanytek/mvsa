<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="invoice_note_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.invoice.notw</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="20"/>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr=".//div[@id='invoicing_settings']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="invoice_note_zero_tax"/>
                        <div class="text-muted">
                            Add Notes in Invoice for Zero Tax Configured
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="invoice_note_zero_tax" class="o_light_label"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
